		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.3.xsd
		http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.3.xsd">

    <!--配置spring的扫描包，帮助我们实现自动实例化-->
    <context:component-scan base-package="com.bst.dao;com.bst.service"/>
    <import resource="spring-shiro.xml"></import>
    <import resource="spring-hibernate.xml"></import>
    <import resource="springmvc.xml"></import>
